# Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# Backend API URL (required)
# Example: https://todo-phase-3-production.up.railway.app
NEXT_PUBLIC_API_URL=https://your-railway-backend-url.railway.app

# OpenAI Domain Key (required for ChatKit integration)
# Get this from: https://platform.openai.com/settings/organization/security/domain-allowlist
# Steps: 1. Add your Vercel domain to OpenAI allowlist
#        2. Get the domain key from OpenAI
#        3. Paste it here
NEXT_PUBLIC_OPENAI_DOMAIN_KEY=sk-domain-xxxxx

# Optional: Analytics tracking
NEXT_PUBLIC_ANALYTICS_ID=

# Optional: Feature flags
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false
